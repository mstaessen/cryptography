<?php $this->headTitle('Nieuws', 'PREPEND'); ?><?php $this->headMeta()		->appendName('description', 'Nieuws over deze website'); ?><h1>Nieuws</h1><?php if(count($this->news) > 0): ?>	<?php foreach($this->news as $news): ?>	<div class="intro">		<?php $pos = strpos($news->text, '</p>'); ?>		<p>			<?php echo substr($news->text, 0, $pos + 4); ?>		</p>		<p>			<?php $date = new Zend_Date($news->date); ?>			<span class="signature">					<em>Gepost op <?php echo $date->toString('EEEE d MMMM YYYY', null, new Zend_Locale('nl_BE')); ?></em>				 | <a href="<?= $this->url(array('controller' => 'nieuws', 'action' => 'lees', 'id' => $news->id)); ?>">Lees meer</a>			</span>		</p>	</div>	<?php endforeach; ?><?php endif; ?>